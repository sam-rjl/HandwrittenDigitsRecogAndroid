<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/linearLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	tools:context="jp.narr.tensorflowmnist.MainActivity">

	<org.opencv.android.JavaCameraView
		android:id="@+id/java_surface_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginBottom="156dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="fill_parent"
		android:layout_height="139dp"
		android:layout_marginBottom="16dp"
		android:text="TextView"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginBottom="9dp"
		android:text="Catch"
		app:layout_constraintBottom_toTopOf="@+id/textView"
		app:layout_constraintEnd_toStartOf="@+id/java_surface_view"
		app:layout_constraintStart_toEndOf="@+id/java_surface_view"
		app:layout_constraintTop_toBottomOf="@+id/java_surface_view"
		app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>